<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.nazanin.casalomahospitalapp.PatientSearchResult">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/backgrounpatient" />

    <TextView
            android:id="@+id/patientResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="84dp"
            android:fontFamily="sans-serif"
            android:textColor="#441915"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="56dp" />

    <TextView
        android:id="@+id/patientTitleInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="17dp"
        android:fontFamily="sans-serif"
        android:text="@string/information"
        android:textColor="#0f0f0f"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Information" />

    <Button
        android:id="@+id/pationtTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPatientTestBtnClick"
        android:text="@string/ok"
        android:textColor="#0f0f0f"
        android:layout_alignBottom="@+id/imageView8"
        android:layout_alignRight="@+id/patientTitleInfoTextView"
        android:layout_alignEnd="@+id/patientTitleInfoTextView"
        android:layout_marginBottom="100dp" />



    </RelativeLayout>



